{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "Collection",
    "description": "All information about a Collection",
    "type": "object",
    "properties": {
        "sourceLanguage": {
            "description": "",
            "type": "string"
        },
        "destinationLanguage": {
            "description": "",
            "type": "string"
        },
        "name": {
            "description": "The name of collection",
            "type": "string"
        },
        "description": {
            "description": "The description of collection",
            "type": "string"
        },
        "author": {
            "description": "Author name",
            "type" : "string"
        },
        "nickname": {
            "description": "Name of the collection in URL",
            "type": "string"
        },
        "words": {
            "description": "All words of the collection",
            "type": "array",
            "items" :{
                "type": "object",
                "properties":{
                    "origin": {
                        "description" : "Word or phrase in source language",
                        "type": "string"
                    },
                    "definitions": {
                        "type": "array",
                        "description": "Possible translations of the word or phrase",
                        "items":
                        {
                            "type": "string"
                        }
                    },
                    "comments": {
                        "description": "author's comments to the word",
                        "type": "string"
                    },
                    "examples": {
                        "type":"array",
                        "description": "examples of word or phrase usages",
                        "items":{
                            "type": "object",
                            "properties": {
                                "origin":{
                                    "description": "example of word or phrase usage in source language",
                                    "type": "string"
                                },
                                "translation": {
                                    "description": "the translation of the origin to the destinationLanguage",
                                    "type": "string"
                                },
                                "comments": {
                                    "description": "author's comments to the example",
                                    "type": "string"
                                }
                            }
                        }

                    }

                }
            }
        }
    }
}